<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/billing_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"

            tools:hint="49" />

        <TextView
            android:id="@+id/billing_item_drink_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/billing_item_quantity"
            android:textColor="@android:color/black"
            tools:hint="Drink Name" />

        <TextView
            android:id="@+id/billing_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            tools:hint="VND 16000" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/billing_item_topping_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="35dp"
        tools:listitem="@layout/item_billing_topping_layout">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
